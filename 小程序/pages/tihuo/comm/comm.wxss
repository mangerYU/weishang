image{
width: 100%;
height: 400rpx;

}
.comname{
width:93%;
height: 130rpx;
border-bottom: 10rpx solid #EEEEEE;
display: flex;
flex-direction: row;
align-items: center;
justify-content: space-between;
padding: 0rpx 30rpx 0rpx 30rpx;
}
.left{
  display: flex;
  flex-direction: column;
 line-height: 50rpx;
  align-items: flex-start;
  font-size: 32rpx;
}
.right{
color: #999999;
font-size: 26rpx;
}
.message{
width: 100%;
height: 420rpx;
border-bottom: 10rpx solid #EEEEEE;
display: flex;
flex-direction: column;
justify-content: space-between;
}
.address{
width: 100%;
height: 270rpx;
display: flex;
flex-direction: column;
justify-content: space-around;
font-size: 24rpx;
padding-left: 30rpx;
border-bottom: 2rpx solid #EEEEEE;
color: #999999;
}
.adr{
width: 126rpx;
height: 40rpx;
border: 2rpx solid #FF853A;
text-align: center;
color: #FF853A;
margin-left: 74%;

}
.carts-num {
  display: flex;
  align-items: center;
  text-align: center;
  height: 50rpx;
  border-radius: 60rpx;
  width: 152rpx;
  border: 1rpx solid #D2D2D2;

}
.carts-num .minus, .carts-num .plus {
  margin: 10rpx;
  color: #D2D2D2;
  height: 40rpx;
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 50rpx;
}

.carts-num .minus {
  
  font-size: 34rpx;
}
.view_text_center {
  font-size: 30rpx;
  display: inline-block;
  color: #888;
  width: 30rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}
.carts-num .plus {
  font-size: 34rpx;
}

.ber{
display: flex;
flex-direction: column;
align-items: center;
font-size: 28rpx;
color: #999999;
}
.number{
width: 93%;
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: flex-start;
padding: 30rpx;
}
.num{
  width:93%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  padding: 0rpx 30rpx;
  }
  .but{
    width:200rpx;
    height: 66rpx;
    background-color:  #FF853A;
    border-radius: 40rpx;
    color: #FFFFFF;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content:center;
    align-items: center;
  }