/* pages/user/user.wxss */
.content{
  width: 100%;
  height: 100vh;
  background-color:#fafafa;
}
.banner{
  width: 100%;
  height: 330rpx;
  background-color: salmon;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.banner .user{
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #FFFFFF;
}
.user image{
  width: 95rpx;
  height: 95rpx;
  border-radius: 50rpx;
  margin: 0rpx 20rpx;
}
.info{
  font-size: 25rpx;
  color: #FFFFFF;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.info image{
  width: 25rpx;
  height: 38rpx;
  margin: 0rpx 20rpx 0rpx 0rpx;

}
.shou{
width: 100%;
height: 130rpx;
font-size: 30rpx;
color: #FFFFFF;
display: flex;
flex-direction: row;
align-items: center;
justify-content: space-around;
}
.comm{
  height: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-size: 25rpx;
}
.comm image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.top{
width: 100%;
height: 220rpx;
background-color:#FFFFFF;
margin: 20rpx 0rpx;
display: flex;
flex-direction: row;
align-items: center;
justify-content: space-around;
border-top: 1rpx solid #EEEEEE;
box-shadow:#EEEEEE 0px 4px 6px;
}
.row{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 25rpx;
}
.list{
  width: 95%;
  height: 100rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #EEEEEE;
  box-shadow:#EEEEEE 0px 4px 6px;
  margin-left: 2.5%;
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
  border-radius: 10rpx;
  }
  .row image{
    width: 50rpx;
    height: 50rpx;
    margin-left: 15rpx;
  }
 