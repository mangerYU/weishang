/* pages/user/xiaji/xiaji.wxss */
page{
  background-color: #fafafa;
}
.list{
  width: 100%;
  height: 205rpx;
  border: 1px solid #EEEEEE;
  box-shadow:#EEEEEE 0px 4px 6px;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.left{
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
}

.img{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  line-height: 50rpx;
  margin-left: 30rpx;
}
.user{
  align-items: flex-start;
}
.user p{
height: 34rpx;
background-color: #FF853A;
text-align: center;
color: #ffffff;
margin-right: 20rpx;
}
.img image{
  width: 92rpx;
  height: 92rpx;
  border-radius: 50rpx;
}
.right{
width:250rpx;
height: 140rpx;
display: flex;
flex-direction: column;
align-items: center;
justify-content: space-around;
border-left: 2rpx solid #EEEEEE;
}