/* pages/user/shouyi/shouyi.wxss */
.top{
width: 100%;
height: 240rpx;
background-color: #FF853A;
color: #FFFFFF;
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
line-height: 80rpx;
}
page{
  height: 100vh;
background-color:#fafafa;
}
.navbar{
  flex: none;
  display: flex;
  background: #EEEEEE;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
}
.navbar .item.active{
  color: #FF853A;
  font-size: 32rpx;

}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height:6rpx;
  width: 100%;
  background: #FF853A;
}
.list{
width: 93%;
height: 100rpx;
border-bottom: 2rpx solid #EEEEEE;
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: center;
font-size: 26rpx;
color:#333333;
padding: 0rpx 30rpx 0rpx 30rpx;
}