/* pages/user/mydata/mydata.wxss */
.top{
width: 100%;
height: 220rpx;
border-bottom: 10rpx solid #EEEEEE;
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
}
.top image{
width: 120rpx;
height: 120rpx;
border-radius: 50%;
}
.img{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.img image{
  width: 32rpx;
  height: 32rpx;
  margin: 10rpx;
}
.info{
  width: 100%;
  height: 360rpx;
  border-bottom: 10rpx solid #EEEEEE;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.list image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}
.list{
  width: 100%;
  height: 88rpx;
    border-bottom:2rpx solid #EEEEEE;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
}

.list span:last-child{
  font-size: 26rpx;
  margin-right: 30rpx;

}
.but{
  width: 444rpx;
  height: 70rpx;
  background-color: #FF853A;
  color: #FFFFFF;
  font-size: 32rpx;
  margin-left: 20%;
  margin-top: 200rpx;
  border-radius: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}