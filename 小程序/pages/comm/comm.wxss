page{
  /* display: flex;
  flex-direction: column; */
  height: 100%;
background-color:#fafafa;
}
.navbar{
  flex: none;
  display: flex;
  background: #EEEEEE;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
}
.navbar .item.active{
  color: #FF853A;
  font-size: 32rpx;

}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height:6rpx;
  width: 100%;
  background: #FF853A;
}
.list{
width: 100%;
height: 290rpx;
border-bottom: 10rpx solid #EEEEEE;
display: flex;
flex-direction: column;
justify-content: space-between;
}
.title{
font-size: 29rpx;
margin: 20rpx;
}
.but{
  width: 120rpx;
  height: 40rpx;
  background-color: #FF853A;
  color: #FFFFFF;
  text-align: center;
 position: relative;
 top: 150rpx;
}
.time{
  font-size: 24rpx;
 color: #999999;
 display: flex;
 flex-direction: row;
 align-items: center;
justify-content: flex-end;
margin-right: 20rpx;
}
.time image{
width: 35rpx;
height: 35rpx;
margin: 10rpx;
}
.info{
  height:160rpx; 
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 26rpx;
  padding-left: 100rpx;
  border-top: 2rpx solid #EEEEEE;
}
.info image{
  width: 85rpx;
  height: 85rpx;
  margin: 10rpx;
}
.title2{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin:20rpx;
  align-items: center;
  font-size: 29rpx;
}