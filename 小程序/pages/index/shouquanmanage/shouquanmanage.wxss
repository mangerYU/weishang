page{
  background-color: #fafafa;
}
.top{
width: 100%;
height: 100rpx;
display: flex;
flex-direction: row;
justify-content: center;
align-items:flex-end;
}
.top input{
width: 70%;
height: 66rpx;
border: 2rpx solid #DFDFDF;
font-size: 28rpx;
text-align: center;
}
.butt{
width: 160rpx;
height: 66rpx;
background-color: #FF853A;
color: #FFFFFF;
font-size: 32rpx;
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;

}
.jieguo{
width: 100%;
height: 370rpx;
border-bottom: 10rpx solid #DFDFDF;
}
.column{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.list{
  width: 100%;
  height: 180rpx;
  border-bottom: 2rpx solid #EEEEEE;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.left{

  font-size: 24rpx;
}
.left image{
width: 92rpx;
height: 92rpx;
border-radius: 50rpx;
}

.right{
  width: 120rpx;
  height: 40rpx;
  background-color:#FF853A;
  font-size:  28rpx;
  text-align: center;
color: #ffffff;
margin-right: 30rpx;

}
.name{
  margin: 0rpx 20rpx 0rpx 30rpx;
}
.message{
  width: 350rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 20px;
}
