/* pages/index/quit/quit.wxss */
.content{
  width: 100%;
  height: 100vh;
  background-color: #fafafa;
}
.quit{
  width: 100%;
height: 270rpx;
background-color: #ffffff;
border-top: 1rpx solid #EEEEEE;
box-shadow:#EEEEEE 0px 4px 6px;
font-size: 26rpx;
display: flex;
flex-direction: column;
line-height: 60rpx;
padding: 15rpx 0rpx 15rpx 30rpx;
margin: 30rpx 0rpx;
}
.quit image{
  width: 45rpx;
  height: 45rpx;
  margin: 10rpx;
}
 .row{
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .title{
    width: 150rpx;
    height: 33rpx;
    border-left:7rpx solid #FF853A;
    font-size: 32rpx;
    color: #FF853A;
    padding-left: 20rpx;
    margin:50rpx 0rpx 0rpx 30rpx;
     display: flex;
    align-items: center;
  }
  .text{
    width: 100%;
    height:300rpx;
    border-top: 10rpx solid #EEEEEE;
    display: flex;
    justify-content:center;
    align-items: center;
    margin-top: 20rpx;
  }
  textarea{
    width: 90%;
    height:220rpx;
    font-size: 26rpx; 
    border:1rpx solid #EEEEEE;
    padding:20rpx;
  }
  .sub{
    width: 334rpx;
    height: 70rpx;
    background-color: #FF853A;
    border-radius: 40rpx;
    color: #FFFFFF;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 27%; 
    margin-top: 100rpx;
  }