/* pages/index/yunjl/yunjl.wxss */
.top{
width: 100%;
height: 240rpx;
background-color: #FF853A;
justify-content: center;
}
.navs{
width: 40%;
height: auto;
color: #FFFFFF;
font-size: 32rpx;
line-height: 70rpx;
}
.colum1{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.row1{
display: flex;
flex-direction: row;
align-items: center;

}
.navbar{
  flex: none;
  display: flex;
  background: #EEEEEE;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
}
.navbar .item.active{
  color: #FF853A;
  font-size: 32rpx;

}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height:6rpx;
  width: 100%;
  background: #FF853A;
}
.list{
width: 100%;
height: 185rpx;
border-bottom: 2rpx solid #EEEEEE;
}
.column{
display: flex;
flex-direction: column;
justify-content: space-around;
}
.time{
width: 93%;
height: 40rpx;
border-bottom: 1rpx solid #EEEEEE;
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: center;
font-size: 24rpx;
margin-left: 30rpx;
color:#999999; 
}
.time image{
width: 30rpx;
height: 30rpx;
}
.comm{
width: 93%;
padding: 0rpx 30rpx;

}
.row{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}
.comm image{
width: 104rpx;
height: 104rpx;
margin-right:16rpx;
}
.right{
line-height: 50rpx;
align-items: flex-end;
}
