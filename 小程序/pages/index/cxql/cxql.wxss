.top{
width: 100%;
height: 180rpx;
display: flex;
flex-direction: row;
justify-content: center;
align-items: center;
}
.top input{
width: 70%;
height: 66rpx;
border: 2rpx solid #DFDFDF;
font-size: 28rpx;
text-align: center;
}
.butt{
width: 160rpx;
height: 66rpx;
background-color: #FF853A;
color: #FFFFFF;
font-size: 32rpx;
